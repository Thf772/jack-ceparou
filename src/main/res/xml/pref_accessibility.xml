<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

<SwitchPreference
    android:defaultValue="false"
    android:key="color_blind"
    android:summary="@string/color_blindness_summary"
    android:title="@string/color_blindness"
    android:persistent="true" />

<SwitchPreference
    android:defaultValue="false"
    android:key="dyslexy"
    android:summary="@string/dyslexy_summary"
    android:title="@string/dyslexy"
    android:persistent="true"
    />

<ListPreference
    android:defaultValue="2"
    android:entries="@array/pref_font_size_titles"
    android:entryValues="@array/pref_font_size_titles"
    android:key="font_size"
    android:negativeButtonText="@null"
    android:positiveButtonText="@null"
    android:title="@string/font_size"
    android:persistent="true" />


</PreferenceScreen>